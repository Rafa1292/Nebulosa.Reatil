@using Business.Measures;
@using Business.ModelsDTO;

@inject NavigationManager NavManager
@inject RouterMeasure router

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Actualizar medida
</span>
<span class="col-12 text-danger text-center h5">@Message</span>
<EditForm class="col-4 p-2" OnValidSubmit="@Save" Model="@oMeasure">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name" class="font-weight-bolder">Nombre de la medida:</label>
        <InputText id="name" @bind-Value="oMeasure.Name" class="form-control" />
        <ValidationMessage For="@(() => oMeasure.Name)" class="text-danger" />
    </div>
    <div class="form-group justify-content-center d-flex flex-wrap">
        <input type="submit" value="Actualizar medida" class="form-control btn btn-dark col-12" />
        <a href="Measures/Index" class="btn btn-outline-secondary m-3">Volver</a>
    </div>

</EditForm>

@code {
    [Parameter]
    public string MeasureId { get; set; }

    public string Message { get; set; }
    MeasureDTO oMeasure = new MeasureDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = router.Get(Int32.Parse(MeasureId));
            if (response.IsSuccess)
            {
                oMeasure = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }

    }

    private void Save()
    {
        try
        {
            var response = router.Update(oMeasure);
            if (response.IsSuccess)
            {
                NavManager.NavigateTo("Measures/Index");
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.InnerException.ToString();
        }

    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
