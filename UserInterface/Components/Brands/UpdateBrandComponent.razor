@using Business.Brands;
@using Business.ModelsDTO;

@inject NavigationManager NavManager
@inject RouterBrand router

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Actualizar marca
</span>
<span class="col-12 text-danger text-center h5">@Message</span>
<EditForm class="col-4 p-2" OnValidSubmit="@Save" Model="@oBrand">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name" class="font-weight-bolder">Nombre de la marca:</label>
        <InputText id="name" @bind-Value="oBrand.Name" class="form-control" />
        <ValidationMessage For="@(() => oBrand.Name)" class="text-danger" />
    </div>
    <div class="form-group justify-content-center d-flex flex-wrap">
        <input type="submit" value="Actualizar marca" class="form-control btn btn-dark col-12" />
        <a href="Brands/Index" class="btn btn-outline-secondary m-3">Volver</a>
    </div>

</EditForm>

@code {
    [Parameter]
    public string BrandId { get; set; }

    public string Message { get; set; }
    BrandDTO oBrand = new BrandDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = router.Get(Int32.Parse(BrandId));
            if (response.IsSuccess)
            {
                oBrand = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }

    }

    private void Save()
    {
        try
        {
            var response = router.Update(oBrand);
            if (response.IsSuccess)
            {
                NavManager.NavigateTo("Brands/Index");
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.InnerException.ToString();
        }

    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}

