@using Business.Taxes
@using Business.ModelsDTO

@inject RouterTax router

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Impuestos
</span>
<p class="col-12 p-1 d-flex justify-content-center">
    <a class="btn btn-primary " href="Taxes/Create">Agregar nuevo impuesto</a>
</p>
<label class="text-danger h5 ">@Message</label>

<div class="col-12 p-0 d-flex flex-wrap justify-content-center">
    <table id="taxesTable" class="display col-6 table text-center table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Porcentaje</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tax in taxes)
            {
                <tr>
                    <td>@tax.Name</td>
                    <td>@tax.Percentage</td>
                    <td>
                        <a class="btn btn-secondary" href="Taxes/Update/@tax.TaxId">Editar</a>
                        <a class="btn btn-outline-danger" href="Taxes/Delete/@tax.TaxId">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


@code {
    private List<TaxDTO> taxes = new List<TaxDTO>();
    private string Message;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = router.GetAll(false);
            if (response.IsSuccess)
            {
                taxes = response.Data.ToList();
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.InnerException.ToString();
        }

    }
}