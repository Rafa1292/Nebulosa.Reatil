@using Business.ModelsDTO
@using Business.Providers

@inject NavigationManager NavManager
@inject RouterProvider router

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Eliminar proveedor
</span>
<label class="col-12 text-center">¿Seguro que deseas eliminar este proveedor?</label>
<h5 class="col-12 mb-4 text-center">
    <strong>
        @oProvider.Name
    </strong>
</h5>
<div class="form-group justify-content-center d-flex flex-wrap">
    <input type="button" value="Eliminar proveedor" @onclick="Delete" class="form-control btn btn-danger col-12" />
    <a href="Providers/Index" class="btn btn-outline-secondary m-3">Volver</a>
</div>


@code {
    [Parameter]
    public string ProviderId { get; set; }

    public string Message { get; set; }
    ProviderDTO oProvider = new ProviderDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = router.Get(Int32.Parse(ProviderId));
            if (response.IsSuccess)
            {
                oProvider = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }
    }

    private void Delete()
    {
        try
        {
            var response = router.Delete(Int32.Parse(ProviderId));
            if (response.IsSuccess)
            {
                NavManager.NavigateTo("Providers/Index");
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {
            Message = e.Message;
        }
    }
}
