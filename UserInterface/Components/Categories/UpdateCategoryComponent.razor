@using Business.Categories;
@using Business.ModelsDTO;

@inject NavigationManager NavManager
@inject RouterCategory router

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Actualizar categoria
</span>
<span class="col-12 text-danger text-center h5">@Message</span>
<EditForm class="col-4 p-2" OnValidSubmit="@Save" Model="@oProductCategory">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="name" class="font-weight-bolder">Nombre de la categoría:</label>
        <InputText id="name" @bind-Value="oProductCategory.Name" class="form-control" />
        <ValidationMessage For="@(() => oProductCategory.Name)" class="text-danger" />
    </div>
    <div class="form-group justify-content-center d-flex flex-wrap">
        <input type="submit" value="Actualizar categoría" class="form-control btn btn-dark col-12" />
        <a href="Categories/Index" class="btn btn-outline-secondary m-3">Volver</a>
    </div>

</EditForm>

@code {
    [Parameter]
    public string CategoryId { get; set; }

    public string Message { get; set; }
    ProductCategoryDTO oProductCategory = new ProductCategoryDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = router.Get(Int32.Parse(CategoryId));
            if (response.IsSuccess)
            {
                oProductCategory = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }

    }

    private void Save()
    {
        try
        {
            var response = router.Update(oProductCategory);
            if (response.IsSuccess)
            {
                NavManager.NavigateTo("Categories/Index");
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.InnerException.ToString();
        }

    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
