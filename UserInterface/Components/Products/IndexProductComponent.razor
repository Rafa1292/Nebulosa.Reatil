@using Business.Products
@using Business.ModelsDTO
@using System.Globalization

@inject RouterProduct routerProduct

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Productos
</span>
<p class="col-12 p-1 d-flex justify-content-center">
    <a class="btn btn-primary " href="Products/Create">Agregar nuevo producto</a>
</p>
<label class="text-danger h5 ">@Message</label>

<div class="col-12 p-0 d-flex flex-wrap justify-content-center">
    <table id="productsTable" class="display col-12 table text-center table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Costo</th>
                <th>Precio</th>
                <th>Categoria</th>
                <th>Subcategoria</th>
                <th>Comanda</th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
            <tr>
                <td>@product.Name</td>
                <td>¢@product.Cost.ToString("F0", ci)</td>
                <td>¢@product.Price.ToString("F0", ci)</td>
                <td>@product.ProductSubCategoryDTO.ProductCategoryDTO.Name</td>
                <td>@product.ProductSubCategoryDTO.Name</td>
                <td>
                    @if (@product.KitchenMessage)
                    {
                        <input disabled checked type="checkbox" value="" />
                    }
                    else
                    {
                        <input disabled type="checkbox" value="" />
                    }
                </td>


                <td class="d-flex">
                    <a class="btn btn-secondary m-1" href="Products/Update/@product.ProductId">Editar</a>
                    <a class="btn btn-outline-danger m-1" href="Products/Delete/@product.ProductId">Eliminar</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>


@code {
    private List<ProductDTO> products = new List<ProductDTO>();
    private string Message;
    private CultureInfo ci = new CultureInfo("en-us");

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = routerProduct.GetAll(false);
            if (response.IsSuccess)
            {
                products = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }
    }
}