@using Business.ModelsDTO
@using Business.Products

@inject NavigationManager NavManager
@inject RouterProduct routerProduct

<span class="col-12 h4 text-center font-weight-bolder mt-5 mb-5">
    Eliminar producto
</span>
<label class="col-12 text-center">¿Seguro que deseas eliminar este producto?</label>
<h5 class="col-12 mb-4 text-center">
    <strong>
        @oProduct.Name
    </strong>
</h5>
<div class="form-group justify-content-center d-flex flex-wrap">
    <input type="button" value="Eliminar producto" @onclick="Delete" class="form-control btn btn-danger col-12" />
    <a href="Products/Index" class="btn btn-outline-secondary m-3">Volver</a>
</div>


@code {
    [Parameter]
    public string ProductId { get; set; }

    public string Message { get; set; }
    ProductDTO oProduct = new ProductDTO();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = routerProduct.Get(Int32.Parse(ProductId));
            if (response.IsSuccess)
            {
                oProduct = response.Data;
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {

            Message = e.Message;
        }
    }

    private void Delete()
    {
        try
        {
            var response = routerProduct.Delete(Int32.Parse(ProductId), oProduct.Taxes);
            if (response.IsSuccess)
            {
                NavManager.NavigateTo("Products/Index");
            }
            else
            {
                Message = response.Message;
            }
        }
        catch (Exception e)
        {
            Message = e.Message;
        }
    }
}
